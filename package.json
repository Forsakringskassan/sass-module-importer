{
  "name": "@forsakringskassan/sass-module-importer",
  "version": "1.0.1",
  "description": "sass module importer",
  "keywords": [
    "sass",
    "importer"
  ],
  "homepage": "https://github.com/Forsakringskassan/sass-module-importer",
  "bugs": "https://github.com/Forsakringskassan/sass-module-importer/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Forsakringskassan/sass-module-importer.git"
  },
  "license": "MIT",
  "author": "Försäkringskassan",
  "type": "module",
  "exports": {
    ".": "./dist/importer.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "node build.mjs",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix",
    "lint": "run-s eslint prettier:check",
    "lint:fix": "run-s eslint:fix prettier:write",
    "prettier:check": "prettier . --check",
    "prettier:write": "prettier . --write",
    "pretest": "npm run lint",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "prepare": "husky"
  },
  "commitlint": {
    "extends": "@forsakringskassan/commitlint-config/no-jira"
  },
  "lint-staged": {
    "*.{js,json,md,css,scss,html,vue,ts}": "prettier --write",
    "*.{js,vue,ts}": "eslint --fix"
  },
  "prettier": "@forsakringskassan/prettier-config",
  "release": {
    "extends": "@forsakringskassan/semantic-release-config"
  },
  "devDependencies": {
    "@forsakringskassan/commitlint-config": "1.4.0",
    "@forsakringskassan/eslint-config": "11.7.0",
    "@forsakringskassan/eslint-config-cli": "11.7.0",
    "@forsakringskassan/eslint-config-jest": "11.7.0",
    "@forsakringskassan/jest-config": "29.6.0",
    "@forsakringskassan/prettier-config": "3.0.0",
    "esbuild": "0.24.2",
    "husky": "9.1.7",
    "jest": "29.7.0",
    "lint-staged": "15.4.3",
    "npm-pkg-lint": "3.10.7",
    "npm-run-all2": "7.0.2",
    "sass": "1.83.4"
  },
  "peerDependencies": {
    "sass": "^1.79.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
